@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Student Management System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --bg-dark: #0f172a;
            --card-bg: #1e293b;
            --text-light: #f1f5f9;
            --accent: #3b82f6;
            --danger: #ef4444;
            --font-main: 'Inter', sans-serif;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: var(--font-main);
            background-color: var(--bg-dark);
            color: var(--text-light);
        }

        .navbar {
            background-color: #1e293b;
            padding: 1rem 2rem;
            font-weight: 600;
            font-size: 1.1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar-brand {
            color: var(--text-light);
            font-weight: 600;
            font-size: 1.2rem;
            text-decoration: none;
            pointer-events: auto;
        }

            .navbar-brand:hover {
                color: var(--text-light);
                text-decoration: none;
                cursor: default;
            }

        .logout-button {
            padding: 8px 16px;
            font-size: 0.9rem;
            font-weight: 600;
            border-radius: 8px;
            text-decoration: none;
            border: 1px solid transparent;
            background-color: rgba(255, 255, 255, 0.05);
            color: #f1f5f9;
            transition: all 0.25s ease;
        }

            .logout-button:hover {
                background-color: var(--danger);
                color: #fff;
                border-color: var(--danger);
            }

        .content-wrapper {
            padding: 2rem;
        }

        main {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
    </style>
</head>
<body>
    <nav class="navbar"> <a asp-controller="Home" asp-action="Index" class="navbar-brand">Student Management System</a> @if (Context.Session.GetString("JWT") != null)
        {
            <a href="@Url.Action("Logout", "Account")" class="logout-button">Logout</a>
        } </nav>
    
    <main>
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </main>
</body>
</html>