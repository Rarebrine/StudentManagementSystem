@model IEnumerable<StudentUI.Models.StudentDto>
@{
    ViewData["Title"] = "Students";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3"> <h2 class="page-title">Students</h2> <a asp-action="Create" class="btn btn-create">Create New</a> </div>
    
    <div class="table-responsive">
        <table class="table table-bordered custom-table text-center">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First</th>
                    <th>Last</th>
                    <th>Email</th>
                    <th>Date of Birth</th>
                    <th style="min-width: 180px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@s.Id</td>
                        <td>@s.FirstName</td>
                        <td>@s.LastName</td>
                        <td>@s.Email</td>
                        <td>@s.DateOfBirth.ToShortDateString()</td>
                        <td>
                            <div class="d-flex justify-content-center gap-2 flex-wrap">
                                <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-sm btn-outline-info">Details</a>
                                <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this student?');">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<style>
    .page-title {
        font-weight: 600;
        color: #f1f5f9;
    }

    .btn-create {
        background-color: #3b82f6;
        color: white;
        padding: 0.5rem 1rem;
        font-weight: 600;
        border-radius: 6px;
        text-decoration: none;
        border: none;
        transition: background-color 0.2s ease;
    }

        .btn-create:hover {
            background-color: #2563eb;
        }

    .custom-table {
        background-color: #1e293b;
        color: #f1f5f9;
        border: 1px solid #334155;
    }

        .custom-table th, .custom-table td {
            vertical-align: middle;
            text-align: center;
            border: 1px solid #475569;
        }

        .custom-table th {
            background-color: #334155;
            font-weight: 600;
            color: #ffffff;
        }

    .btn-sm {
        font-size: 0.85rem;
        font-weight: 500;
    }

    .btn-outline-info {
        color: #38bdf8;
        border-color: #38bdf8;
    }

        .btn-outline-info:hover {
            background-color: #38bdf8;
            color: #0f172a;
        }

    .btn-outline-warning {
        color: #facc15;
        border-color: #facc15;
    }

        .btn-outline-warning:hover {
            background-color: #facc15;
            color: #0f172a;
        }

    .btn-outline-danger {
        color: #ef4444;
        border-color: #ef4444;
    }

        .btn-outline-danger:hover {
            background-color: #ef4444;
            color: #fff;
        }
</style>