@model StudentUI.Models.StudentDto
@{
    ViewData["Title"] = "Edit Student";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: calc(100vh - 72px);">
    <div class="edit-box w-100" style="max-width: 500px;">
        <h1 class="page-title text-center mb-4">Edit Student</h1>
       
        <form asp-action="Edit" method="post">
            <input asp-for="Id" type="hidden" />

            <div class="form-group mb-3">
                <label asp-for="FirstName" class="form-label">First Name</label>
                <input asp-for="FirstName" class="form-control input-dark" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="LastName" class="form-label">Last Name</label>
                <input asp-for="LastName" class="form-control input-dark" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control input-dark" />
            </div>

            <div class="form-group mb-4">
                <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                <input asp-for="DateOfBirth" class="form-control input-dark" type="date" />
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary btn-save">Update</button>
                <a asp-action="Index" class="btn btn-secondary btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>
<style>
    .page-title {
        font-size: 2rem;
        font-weight: 700;
        color: #f1f5f9;
    }

    .edit-box {
        background-color: #1e293b;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.4);
    }

    .form-label {
        color: #cbd5e1;
        font-weight: 500;
    }

    .input-dark {
        background-color: #334155;
        border: none;
        color: #f1f5f9;
    }

        .input-dark::placeholder {
            color: #94a3b8;
        }

    .btn-save {
        background-color: #3b82f6;
        color: white;
        font-weight: 600;
    }

        .btn-save:hover {
            background-color: #2563eb;
        }

    .btn-cancel {
        background-color: #475569;
        color: #f1f5f9;
        font-weight: 600;
    }

        .btn-cancel:hover {
            background-color: #64748b;
            color: white;
        }
</style>